.search {
  padding: 20rpx;
}
.search-input {
  /* padding: 20rpx; */
  width: 100%;
  height: 70rpx;
  background-color: #ccc;
  display: flex;
  border-radius: 20rpx;
  position: sticky;
  top: 0;
  margin-bottom: 20rpx;
}
.search .search-input input {
  width: 80%;
  background-color: #ccc;
  height: 100%;
  border-radius: 20rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.search .search-input button {
  width: 100rpx;
  height: 60rpx;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  text-align: center;
  line-height: 60rpx;
  font-weight: 400;
  font-size: 28rpx;
  border-radius: 20rpx;
}

/* sss */
.diet-shop-item {
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.diet-shop-item-img image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
}

.diet-shop-item-right {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .6);
  margin-left: 10rpx;
}

.diet-shop-item-right>text {
  margin-bottom: 20rpx;
}

.diet-shop-item-right text:first-child {
  color: black;
  font-weight: 700;
}

.diet-shop-item-right-bottom text:first-child {
  color: red;
  margin-right: 40rpx;
}