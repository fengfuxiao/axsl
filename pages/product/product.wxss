/* pages/product/product.wxss */
.product {
  background-color: #f3f3f3;
}

.diet-shop-item {
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.diet-shop-item-img image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
}

.diet-shop-item-right {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .6);
  margin-left: 10rpx;
}

.diet-shop-item-right>text {
  margin-bottom: 20rpx;
}

.diet-shop-item-right text:first-child {
  color: black;
  font-weight: 700;
}

.diet-shop-item-right-bottom text:first-child {
  color: red;
  margin-right: 40rpx;
}