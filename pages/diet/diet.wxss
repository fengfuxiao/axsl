/* pages/diet/diet.wxss */
.diet {
  background-color: #f3f3f3;
}
.diet-top {
  display: flex;
  margin-top: 10rpx;
  align-items: center;
  background-color: #fff;
}
.diet-top-location {
  width: 80rpx;
  text-align: center;
  padding: 0 20rpx;
}
.diet-top input {
  background-color: #f3f3f3;
  border-radius: 10rpx;
  margin: 0 10rpx;
  padding: 4rpx 10rpx;
  width: 90%;
  font-size: 26rpx;
}

.diet-nav {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
.diet-nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx 28rpx;
}
.diet-nav-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
}
.diet-nav-item text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, .6);
}

.diet-shop {
}
.diet-shop-item {
  display: flex;
  padding: 10rpx 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.diet-shop-item-img image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
}
.diet-shop-item-right {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .6);
  margin-left: 10rpx;
}
.diet-shop-item-right>text {
  margin-bottom: 20rpx;
}
.diet-shop-item-right text:first-child {
  color: black;
  font-weight: 700;
}
.diet-shop-item-right-bottom text:first-child {
  color: red;
  margin-right: 40rpx;
}